<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        Welcome to the user page of:  <%= @user.name.capitalize %><br>
        Contact the user at: <%= @user.email %>
      </h1>

		  <div class="col-md-8">
		    <% if @user.events.any? %>
		      <h3>Events (<%= @user.events.count %>)</h3>
		      <ol class="events">
		        <%= render @events %>
		      </ol>
		      <%= will_paginate @events %>
		    <% end %>
		  </div>

    </section>
  </aside>
</div>